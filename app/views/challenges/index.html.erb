<div class="w3-row-padding">
    <div class="w3-col m12">
        <div class="w3-card w3-round w3-white">
        <% if @challenge && @challenge.errors.full_messages.any? %>
          <% @challenge.errors.full_messages.each do |error_message| %>
            <%= error_message if @challenge.errors.full_messages.first == error_message %> <br />
          <% end %>
        <% end %>
        <div class="w3-container w3-padding">
            <h6 class="w3-opacity">Have an idea? Create a new challenge here:</h6>
            <%= form_tag("/challenges") do%>
            <%= text_field_tag("challenge[title]", nil, placeholder: "Provide a title...", class: "w3-border w3-padding text-field-post w3-opacity", required: true)%>
            <%= text_area_tag("challenge[description]", nil, placeholder: "Provide a description...", class:"textarea-challenge w3-opacity", required: true)%>
            <button type="submit" class="w3-button w3-theme"><i class="fa fa-pencil"></i> Create challenge</button> 
            <%end%>
        </div>
        </div>
    </div>
</div>

<div class="w3-row-padding">
    <div class="w3-col m12">
        <div class="w3-card w3-round w3-white">
        <div class="w3-container w3-padding sort-challenge">
            <a href="/challenges/sort/<%="creation"%>" class="link-to el-item"><span class="w3-opacity" >Most recent</span></a>
            <a href="/challenges/sort/<%="users"%>" class="link-to el-item"><span class="w3-opacity" >Most popular</span></a>
            <a href="/challenges/sort/<%="alphabet"%>" class="link-to el-item"><span class="w3-opacity" >Alphabetical</span></a>
        </div>
        </div>
    </div>
</div>

    <%@challenges.each do |challenge|%>
      <%if current_user.name == challenge.creator%>
      <div class="w3-container w3-card w3-white w3-round w3-margin"><br>
        <img src="/images/challenge1.png" alt="Avatar" class="w3-left w3-circle w3-margin-right" style="width:60px">
        <h4><a href="/challenges/<%=challenge.id%>" class="link-to"><%=challenge.title%></h4><a><br>
        <span class="w3-opacity"><%="#{challenge.groups.size} groups"%></span>
        <span class="w3-opacity" style="margin-right:5px;"><%="#{challenge.users.size} users"%></span>
        <hr class="w3-clear"> 
        <button type="button"onclick="location.href='/challenges/<%=challenge.id%>'" class="w3-button w3-theme-d1 w3-margin-bottom"><i class="fa fa-thumbs-up"></i> Commit to challenge</button> 
        <button type="button"onclick="location.href='/challenges/<%=challenge.id%>/edit'" class="w3-button w3-theme-d1 w3-margin-bottom"><i class="fa fa-pencil"></i> Edit challenge</button> 
      </div>
      <%else%>
      <div class="w3-container w3-card w3-white w3-round w3-margin"><br>
        <img src="/images/challenge1.png" alt="Avatar" class="w3-left w3-circle w3-margin-right" style="width:60px">
        <h4><a href="/challenges/<%=challenge.id%>" class="link-to"><%=challenge.title%></h4><a><br>
        <span class="w3-opacity"><%="#{challenge.groups.size} groups"%></span>
        <span class="w3-opacity" style="margin-right:5px;"><%="#{challenge.users.size} users"%></span>
        <hr class="w3-clear"> 
        <button type="button"onclick="location.href='/challenges/<%=challenge.id%>'" class="w3-button w3-theme-d1 w3-margin-bottom"><i class="fa fa-thumbs-up"></i> Commit to challenge</button> 
      </div>
      <%end%>
      <%end%>