<div class="w3-row-padding">
        <div class="w3-col m12">
          <div class="w3-card w3-round w3-white">
            <div class="w3-container w3-padding">
              <h6 class="w3-opacity">Share A Post:</h6>
              <%= form_tag("/posts") do%>
              <%= text_area_tag "post[content]", nil, cols: "81", rows: "2", placeholder: "Type your post here...", class: "w3-border w3-padding"%><br>
              <%= text_field_tag("post[group]", nil, placeholder: "Associate a group with the post...", list: "groups", class: "w3-border w3-padding")%><br>
              <datalist id="groups">
                <%@user.groups.all.each do |g|%>
                  <option value="<%=g.name%>"><%=g.name%></option>
                <%end%>
              </datalist>
              <button type="submit" class="w3-button w3-theme"><i class="fa fa-pencil"></i>  Post</button> 
              <%end%>
            </div>
          </div>
        </div>
      </div>

